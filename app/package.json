{
  "name": "ratel",
  "version": "1.0.0",
  "homepage": "https://ratel.ivipa.com",
  "author": {
    "name": "Vladimir Krivosheev",
    "email": "ivipa@qq.com",
    "url": "https://ratel.ivipa.com"
  },
  "scripts": {
    "electron:run": "electron .",
    "electron:debug": "electron --inspect=5858 .",
    "electron:dir": "electron-builder -- --dir",
    "electron:win": "electron-builder --win",
    "electron:mac": "electron-builder --macos",
    "electron:linux": "electron-builder --linux"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "13.1.8",
    "electron-builder": "^23.6.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "main.js",
  "build": {
    "productName": "Ratel",
    "appId": "com.ivipi.ratel",
    "directories": {
      "output": "build",
      "buildResources": "./builder"
    },
    "files": [
      "dist/",
      "main.js"
    ],
    "locales": {
      "zh-CN": {
        "description": "简体中文",
        "name": "简体中文",
        "message": "locales/zh-CN.json"
      },
      "en-US": {
        "description": "English",
        "name": "English",
        "message": "locales/en-US.json"
      }
    },
    "copyright": "ivipa",
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "displayLanguageSelector": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "dist/favicon-256.ico",
      "uninstallerIcon": "dist/favicon-256.ico",
      "installerHeaderIcon": "dist/favicon-256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ratel"
    },
    "publish": {
      "provider": "github",
      "repo": "xxxx",
      "owner": "xxxx",
      "token": "xxxxxxxxxxxxxxx",
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "win": {
      "icon": "dist/favicon-256.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "icon": "dist/favicon-512.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "dist/favicon-512.png",
      "target": [
        "deb",
        "zip"
      ]
    }
  }
}